<Window x:Class="POSWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POSWPF"
        xmlns:viewmodels="clr-namespace:POSWPF.ViewModels"
        mc:Ignorable="d"
        Title="POS System" Height="700" Width="1000"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F5F5F5"/>
            <Setter Property="VerticalGridLinesBrush" Value="#F5F5F5"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- DataGridColumnHeader Style -->
        <Style x:Key="ModernColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="White" 
                CornerRadius="8" 
                Padding="20"
                Margin="0,0,0,20"
                Effect="{DynamicResource MaterialDesignElevationShadow2}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="POS System" 
                         FontSize="24" 
                         FontWeight="Bold" 
                         VerticalAlignment="Center"
                         Foreground="#212121"/>

                <!-- Product Code Input Section -->
                <StackPanel Grid.Column="1" 
                          Orientation="Horizontal" 
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center">
                    <TextBlock Text="Product Code:" 
                             VerticalAlignment="Center" 
                             Margin="0,0,10,0"
                             FontSize="16"
                             Foreground="#424242"/>
                    <TextBox Width="200" 
                            Text="{Binding ProductCode, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource ModernTextBox}"
                            FontSize="16"/>
                    <Button Content="Add to Cart" 
                            Command="{Binding AddToCartCommand}" 
                            Margin="10,0,0,0" 
                            Style="{StaticResource ModernButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Cart Items DataGrid -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8"
                Effect="{DynamicResource MaterialDesignElevationShadow2}">
            <DataGrid ItemsSource="{Binding CartItems}" 
                      Style="{StaticResource ModernDataGrid}"
                      ColumnHeaderStyle="{StaticResource ModernColumnHeader}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Code" 
                                      Binding="{Binding Code}" 
                                      Width="100"/>
                    <DataGridTextColumn Header="Product Name" 
                                      Binding="{Binding Name}" 
                                      Width="*"/>
                    <DataGridTextColumn Header="Price" 
                                      Binding="{Binding Price, StringFormat=C}" 
                                      Width="120"/>
                    <DataGridTextColumn Header="Quantity" 
                                      Binding="{Binding Quantity}" 
                                      Width="100"/>
                    <DataGridTextColumn Header="Total" 
                                      Binding="{Binding Total, StringFormat=C}" 
                                      Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Total Section -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="8" 
                Padding="20"
                Margin="0,20,0,0"
                Effect="{DynamicResource MaterialDesignElevationShadow2}">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <TextBlock Text="Total: " 
                         FontSize="24" 
                         FontWeight="Bold" 
                         VerticalAlignment="Center"
                         Foreground="#212121"/>
                <TextBlock Text="{Binding Total, StringFormat=C}" 
                         FontSize="24" 
                         FontWeight="Bold" 
                         VerticalAlignment="Center"
                         Foreground="#2196F3"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
